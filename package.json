{
  "name": "soundstorm",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "@rails/webpacker": "^4.0.7",
    "@sentry/browser": "^5.10.2",
    "activestorage": "^5.2.1",
    "animate.css": "^3.7.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "hamljs-loader": "^0.1.1",
    "hls.js": "^0.12.4",
    "hotkeys-js": "^3.4.1",
    "moment": "^2.22.2",
    "moment-duration-format": "^2.2.2",
    "normalize.css": "^8.0.1",
    "rails-ujs": "^5.2.1",
    "stimulus": "^1.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "@sentry/webpack-plugin": "^1.9.3",
    "babel-eslint": "^10.0.1",
    "eslint-config-standard": "^12.0.0",
    "stylelint": "^9.8.0",
    "stylelint-scss": "^3.4.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-server": "^3.7.2"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "prefer-const": [
        "error"
      ],
      "getter-return": [
        "error"
      ],
      "curly": [
        "error",
        "multi-line"
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "block-no-empty": null
    }
  }
}
